<Application x:Class="AudienciasApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:AudienciasApp.Utils"
             StartupUri="Views/MainWindow.xaml"
             DispatcherUnhandledException="OnDispatcherUnhandledException">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- WPF UI Theme Resources -->
        <ui:ThemesDictionary Theme="Dark"/>
        <ui:ControlsDictionary/>

        <!-- Custom Styles and Resources (crear este archivo si no existe) -->
        <!-- <ResourceDictionary Source="Resources/CustomStyles.xaml"/> -->
      </ResourceDictionary.MergedDictionaries>

      <local:BoolToSaveButtonTextConverter x:Key="BoolToSaveButtonTextConverter"/>

      <!-- Global Application Colors -->
      <SolidColorBrush x:Key="PrimaryAccentBrush"
          Color="#0078D4"/>
      <SolidColorBrush x:Key="SuccessBrush"
          Color="#107C10"/>
      <SolidColorBrush x:Key="WarningBrush"
          Color="#FF8C00"/>
      <SolidColorBrush x:Key="DangerBrush"
          Color="#D13438"/>

      <!-- Global Font Settings -->
      <FontFamily x:Key="DefaultFontFamily">Segoe UI Variable Display</FontFamily>
      <System:Double x:Key="DefaultFontSize"
          xmlns:System="clr-namespace:System;assembly=mscorlib">14</System:Double>
    </ResourceDictionary>
  </Application.Resources>
</Application>